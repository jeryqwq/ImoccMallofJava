<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mall.dao.CommentMapper" >
    <resultMap id="BaseResultMap" type="com.mall.pojo.Comment" >
        <constructor >
            <idArg column="cId" jdbcType="INTEGER" javaType="java.lang.Integer" />
            <arg column="productId" jdbcType="INTEGER" javaType="java.lang.Integer" />
            <arg column="userId" jdbcType="INTEGER" javaType="java.lang.Integer" />
            <arg column="toId" jdbcType="INTEGER" javaType="java.lang.Integer" />
            <arg column="username" jdbcType="VARCHAR" javaType="java.lang.String" />
            <arg column="cStarts" jdbcType="INTEGER" javaType="java.lang.Integer" />
            <arg column="cContent" jdbcType="VARCHAR" javaType="java.lang.String" />
            <arg column="cTime" jdbcType="TIMESTAMP" javaType="java.util.Date" />
        </constructor>
    </resultMap>
    <sql id="Base_Column_List" >
        cId,productId, toId,userId, username,cStarts, cContent, cTime
    </sql>
    <select id="selectAllCommentByProductId"  parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select * from mall_comment where productId=#{productId}
  </select>
    <insert id="insertComment" parameterType="map" >
    insert into mall_comment values (0,#{comment.productId},#{comment.userId},#{comment.toId},
    #{comment.username},#{comment.cStarts},#{comment.cContent},now()
    )
  </insert>
</mapper>